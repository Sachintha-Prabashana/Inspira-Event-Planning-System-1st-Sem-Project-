<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.ijse.inspira1stsemesterproject.controller.SendMailController">
   <children>
      <Label alignment="CENTER" layoutX="10.0" layoutY="10.0" prefHeight="28.0" prefWidth="534.0" text="Send Mail" textAlignment="CENTER">
         <font>
            <Font name="Calibri Bold" size="24.0" />
         </font>
      </Label>
      <TextField fx:id="txtSubject" layoutX="57.0" layoutY="55.0" prefHeight="25.0" prefWidth="485.0" promptText="subject" style="-fx-background-color: #fff; -fx-border-color: #7367F0; -fx-border-width: 0 0 1px 0;" />
      <TextArea fx:id="txtBody" layoutX="57.0" layoutY="94.0" prefHeight="200.0" prefWidth="485.0" promptText="body" style="-fx-border-color: #7367F0;" />
      <Button layoutX="393.0" layoutY="308.0" mnemonicParsing="false" onAction="#sendUsingGmailOnAction" prefWidth="150.0" style="-fx-background-color: #7367F0;" text="Send Using Gmail" textFill="WHITE">
         <font>
            <Font name="Calibri Bold" size="14.0" />
         </font>
      </Button>
      <Button layoutX="393.0" layoutY="358.0" mnemonicParsing="false" onAction="#sendUsingSendgridOnAction" prefWidth="150.0" style="-fx-background-color: #7367F0;" text="Send Using Sendgrid" textFill="WHITE">
         <font>
            <Font name="Calibri Bold" size="14.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
